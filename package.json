{
  "name": "peircemyheart",
  "version": "0.0.2",
  "description": "A web application for modeling Charles Peirce's Alpha Existential Graph System. In development for UAlbany 499.",
  "main": "build/index.html",
  "scripts": {
    "lint": "gts lint",
    "fix": "gts fix",
    "build": "vite build --mode production",
    "build-dev": "vite build --mode development",
    "build-docs": "typedoc",
    "build-electron": "vite build --mode electron && electron-packager --overwrite electron-build peircemyheart",
    "preview": "vite preview --open",
    "live-edit": "vite serve --open",
    "vsc-debug": "vite serve",
    "live-test": "vitest",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/James-Oswald/PeirceMyHeart.git"
  },
  "author": "James Oswald <oswalj@rpi.edu> (jamesoswald.dev)",
  "contributors": [
    "Dawn Moore",
    "Anusha Tiwari",
    "Ryan Reilly",
    "Subrina Huda"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/James-Oswald/PeirceMyHeart/issues"
  },
  "homepage": "https://github.com/James-Oswald/PeirceMyHeart#readme",
  "devDependencies": {
    "@types/node": "20.8.10",
    "@types/wicg-file-system-access": "^2023.10.2",
    "electron": "^27.0.2",
    "electron-packager": "^17.1.2",
    "gts": "^5.2.0",
    "typedoc": "^0.25.2",
    "typescript": "~5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-singlefile": "^0.13.5",
    "vitest": "^0.34.6"
  }
}
